{
  "name": "custom-react-app",
  "version": "1.0.0",
  "description": "A custom react app, with a simplified but powerful build system inspired by create-react-app",
  "private": true,
  "engines": {
    "node": "10.13.0"
  },
  "scripts": {
    "test": "node dev-scripts/test.js --env=jsdom --colors --detectOpenHandles",
    "test:ci": "cross-env CI=true npm run test",
    "start": "webpack-dev-server --progress --config config/webpack.config.js",
    "build": "node dev-scripts/build.js",
    "lint": "eslint --config=config/.eslintrc.js 'src/**/*.{js,mjs,jsx,ts,tsx}'"
  },
  "author": "John Reynolds",
  "license": "MIT",
  "homepage": "https://github.com/joaoreynolds/custom-react-app",
  "repository": {
    "type": "https",
    "url": "https://github.com/joaoreynolds/custom-react-app.git"
  },
  "pre-commit": [
    "lint",
    "test:ci"
  ],
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@testing-library/jest-dom": "^4.0.0",
    "@testing-library/react": "^9.1.2",
    "autoprefixer": "^9.6.1",
    "babel-eslint": "^10.0.2",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "case-sensitive-paths-webpack-plugin": "^2.2.0",
    "chalk": "^2.4.2",
    "core-js": "^2.6.9",
    "cross-env": "^5.2.0",
    "css-loader": "^3.2.0",
    "dotenv": "^8.0.0",
    "eslint": "^6.1.0",
    "eslint-config-standard": "^13.0.1",
    "eslint-config-standard-react": "^8.0.0",
    "eslint-loader": "^2.2.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-standard": "^4.0.0",
    "file-loader": "^4.2.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.8.0",
    "mini-css-extract-plugin": "^0.8.0",
    "postcss-flexbugs-fixes": "^4.1.0",
    "postcss-loader": "^3.0.0",
    "pre-commit": "^1.2.2",
    "style-loader": "^1.0.0",
    "url-loader": "^2.1.0",
    "webpack": "^4.39.2",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.8.0",
    "webpack-manifest-plugin": "^2.0.4",
    "webpack-notifier": "^1.8.0",
    "workbox-webpack-plugin": "^4.3.1"
  },
  "dependencies": {
    "@babel/polyfill": "^7.4.4",
    "react": "^16.9.0",
    "react-dom": "^16.9.0"
  },
  "browserslist": [
    "> 0.25%",
    "ie >= 11",
    "Firefox ESR",
    "not dead"
  ],
  "jest": {
    "modulePaths": [
      "<rootDir>/node_modules",
      "<rootDir>/src",
      "<rootDir>/config/jest"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.[jt]s?(x)",
      "<rootDir>/src/**/*(*.)@(spec|test).[tj]s?(x)"
    ],
    "testEnvironment": "jsdom",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "web.jsx",
      "jsx"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/config/jest/testSetup.js"
    ]
  }
}
