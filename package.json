{
  "name": "custom-react-app",
  "version": "2.0.0",
  "description": "A custom react app, with a simplified but powerful build system inspired by create-react-app",
  "private": true,
  "engines": {
    "node": "14.15.0"
  },
  "scripts": {
    "test": "node dev-scripts/test.js --env=jsdom --colors --detectOpenHandles",
    "test:ci": "cross-env CI=true npm run test",
    "start": "webpack serve --progress --config config/webpack.config.js",
    "build": "node dev-scripts/build.js",
    "lint": "eslint --config=config/.eslintrc.js 'src/**/*.{js,mjs,jsx,ts,tsx}'"
  },
  "author": "John Reynolds",
  "license": "MIT",
  "homepage": "https://github.com/joaoreynolds/custom-react-app",
  "repository": {
    "type": "https",
    "url": "https://github.com/joaoreynolds/custom-react-app.git"
  },
  "pre-commit": [
    "lint",
    "test:ci"
  ],
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-react": "^7.12.10",
    "@babel/preset-typescript": "^7.12.7",
    "@testing-library/jest-dom": "^5.11.8",
    "@testing-library/react": "^11.2.2",
    "@types/jest": "^26.0.19",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "autoprefixer": "^10.1.0",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "case-sensitive-paths-webpack-plugin": "^2.3.0",
    "chalk": "^4.1.0",
    "core-js": "^3.8.1",
    "cross-env": "^7.0.3",
    "css-loader": "^5.0.1",
    "dotenv": "^8.1.0",
    "eslint": "^7.16.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-config-standard-react": "^11.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-standard": "^5.0.0",
    "file-loader": "^6.2.0",
    "fork-ts-checker-webpack-plugin": "^6.0.8",
    "html-webpack-plugin": "^4.5.0",
    "jest": "^26.6.3",
    "mini-css-extract-plugin": "^1.3.3",
    "postcss": "^8.2.2",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-loader": "^4.1.0",
    "pre-commit": "^1.2.2",
    "regenerator-runtime": "^0.13.7",
    "style-loader": "^2.0.0",
    "typescript": "^4.1.3",
    "url-loader": "^4.1.1",
    "webpack": "^5.11.1",
    "webpack-cli": "^4.3.0",
    "webpack-dev-server": "^3.11.1",
    "webpack-manifest-plugin": "^3.0.0",
    "webpack-notifier": "^1.12.0",
    "workbox-webpack-plugin": "^6.0.2"
  },
  "dependencies": {
    "react": "17.0.1",
    "react-dom": "17.0.1"
  },
  "browserslist": [
    "> 0.25%",
    "ie >= 11",
    "Firefox ESR",
    "not dead"
  ],
  "jest": {
    "modulePaths": [
      "<rootDir>/node_modules",
      "<rootDir>/src",
      "<rootDir>/config/jest"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.[jt]s?(x)",
      "<rootDir>/src/**/*(*.)@(spec|test).[tj]s?(x)"
    ],
    "testEnvironment": "jsdom",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "ts",
      "tsx"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/config/jest/testSetup.js"
    ]
  }
}
