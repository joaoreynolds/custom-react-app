{
  "name": "custom-react-app",
  "version": "1.0.0",
  "description": "A custom react app, with a simplified but powerful build system inspired by create-react-app",
  "private": true,
  "engines": {
    "node": "10.13.0"
  },
  "scripts": {
    "test": "node dev-scripts/test.js --env=jsdom --colors --detectOpenHandles",
    "test:ci": "cross-env CI=true npm run test",
    "start": "webpack-dev-server --progress --config config/webpack.config.js",
    "build": "node dev-scripts/build.js",
    "lint": "eslint --config=config/.eslintrc.js 'src/**/*.{js,mjs,jsx,ts,tsx}'"
  },
  "author": "John Reynolds",
  "license": "MIT",
  "homepage": "https://github.com/joaoreynolds/custom-react-app",
  "repository": {
    "type": "https",
    "url": "https://github.com/joaoreynolds/custom-react-app.git"
  },
  "pre-commit": [
    "lint",
    "test:ci"
  ],
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "autoprefixer": "^9.4.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "case-sensitive-paths-webpack-plugin": "^2.1.2",
    "chalk": "^2.4.1",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.1",
    "dotenv": "^8.0.0",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.13.1",
    "eslint": "^5.9.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-config-standard-react": "^7.0.2",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^9.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-standard": "^4.0.0",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.8.0",
    "mini-css-extract-plugin": "^0.6.0",
    "postcss-flexbugs-fixes": "^4.1.0",
    "postcss-loader": "^3.0.0",
    "pre-commit": "^1.2.2",
    "style-loader": "^0.23.1",
    "url-loader": "^1.1.2",
    "webpack": "^4.32.0",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.4.1",
    "webpack-manifest-plugin": "^2.0.4",
    "webpack-notifier": "^1.7.0",
    "workbox-webpack-plugin": "^4.3.1"
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "browserslist": "> 0.25%, not dead",
  "babel": {
    "presets": [
      "@babel/preset-react",
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "entry"
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ]
  },
  "jest": {
    "modulePaths": [
      "<rootDir>/node_modules",
      "<rootDir>/src"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.js?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).js?(x)"
    ],
    "testEnvironment": "jsdom",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "web.jsx",
      "jsx"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/config/jest/testSetup.js"
    ]
  }
}
