{
  "name": "custom-react-app",
  "version": "1.0.0",
  "description": "A custom react app, with a simplified but powerful build system inspired by create-react-app",
  "private": true,
  "engines": {
    "node": "10.13.0"
  },
  "scripts": {
    "test": "node dev-scripts/test.js --env=jsdom --colors --detectOpenHandles",
    "test:ci": "cross-env CI=true npm run test",
    "start": "webpack-dev-server --progress --config config/webpack.config.js",
    "build": "node dev-scripts/build.js",
    "lint": "eslint --config=config/.eslintrc.js 'src/**/*.{js,mjs,jsx,ts,tsx}'"
  },
  "author": "John Reynolds",
  "license": "MIT",
  "homepage": "https://github.com/joaoreynolds/custom-react-app",
  "repository": {
    "type": "https",
    "url": "https://github.com/joaoreynolds/custom-react-app.git"
  },
  "pre-commit": [
    "lint",
    "test:ci"
  ],
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/plugin-proposal-class-properties": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-react": "^7.10.1",
    "@testing-library/jest-dom": "^5.9.0",
    "@testing-library/react": "^10.0.5",
    "autoprefixer": "^9.8.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.0.1",
    "babel-loader": "^8.1.0",
    "case-sensitive-paths-webpack-plugin": "^2.3.0",
    "chalk": "^4.0.0",
    "core-js": "^3.6.5",
    "cross-env": "^7.0.2",
    "css-loader": "^3.5.3",
    "dotenv": "^8.2.0",
    "eslint": "^7.1.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-standard": "^4.0.0",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.3.0",
    "jest": "^26.0.1",
    "mini-css-extract-plugin": "^0.9.0",
    "postcss-flexbugs-fixes": "^4.2.1",
    "postcss-loader": "^3.0.0",
    "pre-commit": "^1.2.2",
    "regenerator-runtime": "^0.13.5",
    "style-loader": "^1.2.1",
    "url-loader": "^4.1.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0",
    "webpack-manifest-plugin": "^2.2.0",
    "webpack-notifier": "^1.8.0",
    "workbox-webpack-plugin": "^5.1.3"
  },
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "browserslist": [
    "> 0.25%",
    "ie >= 11",
    "Firefox ESR",
    "not dead"
  ],
  "jest": {
    "modulePaths": [
      "<rootDir>/node_modules",
      "<rootDir>/src",
      "<rootDir>/config/jest"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.[jt]s?(x)",
      "<rootDir>/src/**/*(*.)@(spec|test).[tj]s?(x)"
    ],
    "testEnvironment": "jsdom",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "web.jsx",
      "jsx"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/config/jest/testSetup.js"
    ]
  }
}
